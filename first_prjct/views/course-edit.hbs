	<h1>Edit course {{course.title}} </h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
      <input name="title" id="title" type="text" class="validate" required value="{{course.title}}">
      <label for="title">Course title</label>
      <span class="helper-text" data-error="Write the title"></span>
    </div>
    <div class="input-field">
      <input name="price" id="price" type="number" class="validate" required min="1" value="{{course.price}}">
      <label for="price">Course price</label>
      <span class="helper-text" data-error="Write the price"></span>
    </div>
    <div class="input-field">
      <input name="img" id="img" type="text" class="validate" required value="{{course.img}}">
      <label for="img">URL image</label>
      <span class="helper-text" data-error="Write the url"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">
    <button class="btn btn-primary">Edit course</button>
</form>